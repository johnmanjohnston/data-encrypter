<Window x:Class="fileencrypter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:fileencrypter"
        mc:Ignorable="d"
        Title="Johnny's File Encrypter" Height="600" Width="1080"
        Background="#303040"
        >

    <Grid>
        <Label Foreground="#EEEEFF" Content="Directory Encrypter"/>
        
        <StackPanel HorizontalAlignment="Left" Margin="0,20,0,0" Width="1080">
            <Label Foreground="#EEEEFF" x:Name="filepathLabel" Content="Directory path:"/>

            <Button HorizontalAlignment="Left" Width="130" Click="SelectPath" Content="Select Directory Path"/>
            <Button HorizontalAlignment="Left" Width="130" Click="EncryptDataClick"  Content="Encrypt"/>
            <Button HorizontalAlignment="Left" Width="130" Click="DecryptDataClick"  Content="Decrypt"/>
            <TextBox Name="encKeyInput">Key</TextBox>
        </StackPanel>
    </Grid>
</Window>
